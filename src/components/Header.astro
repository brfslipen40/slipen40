---
const routeDefinitions: {
  link: string;
  name: string;
}[] = [
  {
    link: "/",
    name: "BRF Slipen 40",
  },
  {
    link: "/info",
    name: "Information",
  },
  {
    link: "/contact",
    name: "Kontakt",
  },
];
---

<header class="bg-teal-300">
  <div class="mx-auto flex w-2/3 gap-2 py-4">
    {routeDefinitions.map((route) => <a href={route.link}>{route.name}</a>)}
  </div>
</header>
