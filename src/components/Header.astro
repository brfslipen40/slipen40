---
type RouteDefinition = {
  link: string;
  name: string;
};

const routeDefinitions: RouteDefinition[] = [
  {
    link: "/",
    name: "BRF Slipen 40",
  },
  {
    link: "/info",
    name: "Information",
  },
  {
    link: "/contact",
    name: "Kontakt",
  },
];
---

<header class="bg-teal-300">
  <nav class="mx-auto flex w-2/3 max-w-screen-2xl gap-2 py-2">
    {
      routeDefinitions.map((route) => (
        <a
          href={route.link}
          class={
            Astro.url.pathname === route.link
              ? "rounded-sm text-gray-800 ring"
              : ""
          }
        >
          {route.name}
        </a>
      ))
    }
  </nav>
</header>
