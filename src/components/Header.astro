---
interface Props {
  class?: string;
}

type RouteDefinition = {
  link: string;
  name: string;
};

const routeDefinitions: RouteDefinition[] = [
  {
    link: "/",
    name: "BRF Slipen 40",
  },
  {
    link: "/info",
    name: "Om f√∂reningen",
  },
  {
    link: "/contact",
    name: "Kontakt",
  },
];

const selectedPageClass = "rounded-sm text-gray-800  bg-neutral-800 text-white";
---

<header class={`bg-neutral-700 ${Astro.props.class}`}>
  <nav class="mx-auto flex w-2/3 max-w-screen-2xl">
    {
      routeDefinitions.map((route) => (
        <a
          href={route.link}
          class={`p-2 text-neutral-300 hover:bg-neutral-500 hover:text-white ${Astro.url.pathname === route.link ? selectedPageClass : ""}`}
        >
          {route.name}
        </a>
      ))
    }
  </nav>
</header>
